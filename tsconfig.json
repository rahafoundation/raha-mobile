{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2018"],
    "outDir": "build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"]
}
